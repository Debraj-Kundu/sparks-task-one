<h3 style="font-weight: 600; font-size: 38px;">Customer List</h3>
<h4>Your Balance: {{balance.amount}}$</h4>
<a class="btn btn-info" href="/employee/transaction">See Transaction</a>


<div class="table-responsive">
  <table class="table table-striped table-bordered col-12">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Account Number</th>
        <th scope="col">Balance</th>
        <th scope="col" colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      {{#each list}}
      <tr>
        <td style="padding-top: 24px;">{{this.fullname}}</td>
        <td style="padding-top: 38px;">{{this._id}}</td>
        <td style="padding-top: 38px;">{{this.amount}}$</td>
        <td>
          <div class="row justify-content-center">
            <button class="btn btn-success mr-0 p-2" style="margin-top: 24px; max-width: 105px;"><a
                href="/employee/transfer/{{this._id}}"
                style="color: white; text-decoration: none; display: inline-block; position: relative; z-index: 1; ">Transfer
                Money</a></button>
            <button class="btn btn-primary mt-10" style="margin-top: 24px;"><a href="/employee/userInfo/{{this._id}}"
                style="color: white; text-decoration: none; display: block;">Details</a></button>
          </div>
        </td>

      </tr>
      {{/each}}
    </tbody>
  </table>
</div>