<h3 style="font-weight: 600; font-size: 38px;">{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
  <input type="hidden" name="_id" value="{{employee._id}}">
  <h2>To: {{employee.fullname}}</h2>
  <div class="form-group">
    <label>Amount</label>
    <input type="text" class="form-control" name="amount" placeholder="Amount">
  </div>
  <h5 style="color: red;">{{msg}}</h5>
  <div class="form-group">
    <button type="submit" class="btn btn-success"><i class="fa fa-credit-card"></i> Transfer</button>
    <a class="btn btn-danger" href="/employee/list"><i class="fa fa-times"></i> Cancel</a>
  </div>
</form>