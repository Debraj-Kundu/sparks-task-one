<h3 style="font-weight: 600; font-size: 38px;">{{viewTitle}}</h3>

<input type="hidden" name="_id" value="{{employee._id}}">
<div class="form-group">
  <label>Full Name</label>
  <input type="text" class="form-control" value="{{employee.fullname}}" name="fullname" disabled
    placeholder="Full Name">
</div>
<div class="form-group">
  <label>Acc No.</label>
  <input type="text" class="form-control" value="{{employee._id}}" name="fullname" disabled placeholder="Full Name">
</div>
<div class="form-group">
  <label>Email</label>
  <input type="text" class="form-control" value="{{employee.email}}" name="email" disabled placeholder="Email">
</div>
<div class="form-row">
  <div class="form-group col-md-6">
    <label>Balance</label>
    <input type="text" class="form-control" value="{{employee.amount}}$" name="amount" disabled placeholder="Amount">
  </div>
  <div class="form-group col-md-6">
    <label>Address</label>
    <input type="text" class="form-control" value="{{employee.address}}" name="address" disabled placeholder="Address">
  </div>
</div>
<div class="form-group">
  <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-arrow-left"></i> Back</a>
</div>